{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./cmd-out",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true // To generate declaration files (.d.ts)
    },
    "include": [
        "cmd/**/*",
        "src/**/*",
        "index.ts",
    ]
}